<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cruz.denunciasapp.Activities.LoginActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_login"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="5dp"
        android:text="Bienvenido al App de Denuncias"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:typeface="sans" />
    <EditText
        android:id="@+id/inp_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_black"
        android:textSize="15sp"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="15dp"
        android:fontFamily="monospace"
        android:hint="Ingrese su email" />

    <EditText
        android:id="@+id/inp_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:hint="Ingrese su contraseÃ±a" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn"
        android:fontFamily="monospace"
        android:text="Ingresar"
        android:onClick="goLogin"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_btn"
        android:fontFamily="monospace"
        android:text="Registrar"
        android:onClick="goRegister"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

</LinearLayout>